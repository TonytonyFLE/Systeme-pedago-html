{q:"94) Convertir : 64 000", a:"6.4 × 10<sup>4</sup>"},
{q:"95) Écrire : 0.00002", a:"2 × 10<sup>-5</sup>"},
{q:"96) Calculer : 9 × 10<sup>9</sup> ÷ 3 × 10<sup>3</sup>", a:"3 × 10<sup>6</sup>"},
{q:"97) Normaliser : 0.02 × 10<sup>2</sup>", a:"2 × 10<sup>0</sup> → 2"},
{q:"98) Convertir : 5.5 × 10<sup>-2</sup>", a:"0.055"},
{q:"99) Calculer : (2 × 10<sup>-1</sup>) × (5 × 10<sup>2</sup>)", a:"10 × 10<sup>1</sup> = 1 × 10<sup>2</sup> → 100"},
{q:"100) Calculer et normaliser : (3.2 × 10<sup>4</sup>) + (8 × 10<sup>3</sup>)", a:"3.2 × 10<sup>4</sup> + 0.8 × 10<sup>4</sup> = 4.0 × 10<sup>4</sup>"}
  ];

  let idx = 0;
  const total = cards.length;
  const qEl = document.getElementById('question');
  const aEl = document.getElementById('answer');
  const idxEl = document.getElementById('index');
  const hintEl = document.getElementById('hint');

  function render(i){
    const card = cards[i];
    qEl.innerHTML = `<strong>${card.q}</strong>`;
    aEl.innerHTML = card.a;
    aEl.style.display = 'none';
    idxEl.textContent = `Carte ${i+1} / ${total}`;
    hintEl.textContent = '';
  }

  document.getElementById('prevBtn').addEventListener('click', ()=>{ idx = (idx-1+total)%total; render(idx);});
  document.getElementById('nextBtn').addEventListener('click', ()=>{ idx = (idx+1)%total; render(idx);});
  document.getElementById('firstBtn').addEventListener('click', ()=>{ idx = 0; render(idx);});
  document.getElementById('lastBtn').addEventListener('click', ()=>{ idx = total-1; render(idx);});
  document.getElementById('randBtn').addEventListener('click', ()=>{ idx = Math.floor(Math.random()*total); render(idx);});
  document.getElementById('shuffleAll').addEventListener('click', ()=>{ shuffleCards(); render(idx);});

  // Montrer la réponse / cliquer sur la carte pour basculer
  document.getElementById('showBtn').addEventListener('click', ()=>{ aEl.style.display = aEl.style.display === 'none' ? 'block' : 'none';});
  document.getElementById('card').addEventListener('click', (ev)=>{ // éviter clics sur les boutons
    if(ev.target.tagName.toLowerCase() === 'button') return;
    aEl.style.display = aEl.style.display === 'none' ? 'block' : 'none';
  });

  // Dés
  function rollDie() { return Math.floor(Math.random()*6)+1; }
  document.getElementById('rollBtn').addEventListener('click', ()=>{
    const d1 = rollDie(), d2 = rollDie(), sum = d1 + d2;
    document.getElementById('die1').textContent = d1;
    document.getElementById('die2').textContent = d2;
    document.getElementById('diceTotal').textContent = sum;
    hintEl.textContent = `Dé : ${d1} et ${d2} (total ${sum})`;
  });

  // Fonction de mélange Fisher-Yates (sur le tableau entier)
  function shuffleCards(){
    for(let i=cards.length-1;i>0;i--){
      const j = Math.floor(Math.random()*(i+1));
      [cards[i],cards[j]] = [cards[j],cards[i]];
    }
    idx = 0;
  }

  // Initialisation
  render(idx);

  // Optionnel : raccourcis clavier
  document.addEventListener('keydown',(e)=>{
    if(e.key === 'ArrowRight'){ idx=(idx+1)%total; render(idx); }
    if(e.key === 'ArrowLeft'){ idx=(idx-1+total)%total; render(idx); }
    if(e.key === ' ') { e.preventDefault(); aEl.style.display = aEl.style.display === 'none' ? 'block' : 'none'; }
  });
</script>
</body>
